<?xml version="1.0" encoding="utf-8"?>
<!--<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">!-->
<Project  DefaultTargets="Test" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
     <!-- Import the MSBuild Tasks -->
	<!-- <Import Project="$(MSBuildExtensionsPath)\MSBuildCommunityTasks\MSBuild.Community.Tasks.Targets" /> !-->
	<PropertyGroup>
		<Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
		<ClassLibraryOutputDirectory>bin\$(Configuration)</ClassLibraryOutputDirectory>
		<ProjectDir>MSBuild-NUnit</ProjectDir >
		<ProjectTestDir>NUnit-MSBuild</ProjectTestDir >
		<ProjectFile>$(ProjectDir)\MSBuild-NUnit.csproj</ProjectFile >
		<TestProjectFile>$(ProjectTestDir)\NUnit-MSBuild.csproj</TestProjectFile >
	</PropertyGroup>
 
	<!-- Build projects by calling the Project files generated by VS -->
	<Target Name="Build">
		<MSBuild Projects="$(ProjectFile)" />
		<MSBuild Projects="$(TestProjectFile)" />
	</Target>
 
	<!-- Run Unit tests -->
	<Target Name="Test" DependsOnTargets="Build">
		<CreateItem Include="$(ProjectTestDir)\$(ClassLibraryOutputDirectory)\*.NUnit-MSBuild.dll">
			<Output TaskParameter="Include" ItemName="TestAssembly" />
		</CreateItem>
		<NUnit Assemblies="@(TestAssembly)" />
	</Target>
</Project>